<h1>Create a new Pet</h1>

<form method="post" action="/pets">
  <label for="name">Name:</label>
  
  <br></br>
  
  <input type="text" name="pet[name]">
  
  <br></br>
  
  <label>Choose an existing owner:</label>
  
  <br></br>
  
  <%@owners.each do |owner| %>
    <input type="checkbox" name="pet[owner_ids][]" value="<%=owner.id%>" id="<%=owner.id%>"><%=owner.name%>
    </input>
  <%end%>
  <br></br>
  
  
  
</form>
  
